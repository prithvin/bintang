{
  "compilerOptions": {
    "module": "es6",
    "esModuleInterop": true,
    "target": "es6",
    "lib": ["es6"],
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "declaration": true,
    "baseUrl": "./src",
    "rootDir": "src",
    "types": ["node", "webdriverio/async"],
    "paths": {
      "@/*": ["src/*"],
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
      "src/**/*"
  ]
}
